@model IEnumerable<Web_App.ViewModels.ProductViewModel>

<h4>Products</h4>
<table class="table">
    <thead class="table-dark">
    <tr>
        <th>
            
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Supplier)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Value)
        </th>

        <th>
            @Html.DisplayNameFor(model => model.Active)
        </th>

        <th style="text-align: right;">
            Edit
        </th>
    </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
    <tr>
        <td>
            <span class="fa fa-book"></span>
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Name)
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Supplier.Name)
        </td>

        <td>
            
            @item.Value.ToString("C")
        </td>

        <td>
            @Html.DisplayFor(modelItem => item.Active)
        </td>
        
        <td style="text-align: right;">
            <a class="btn btn-primary" asp-controller="Products" asp-action="Details" asp-route-id="@item.Id"><span class="fa fa-search"></span></a>
            <a class="btn btn-warning" asp-controller="Products" asp-action="Edit" asp-route-id="@item.Id"><span class="fa fa-pencil-alt"></span></a>
            <a class="btn btn-danger" asp-controller="Products" asp-action="Delete" asp-route-id="@item.Id"><span class="fa fa-trash"></span></a>
        </td>
    </tr>
}
    </tbody>
</table>
